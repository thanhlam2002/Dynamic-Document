<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
  <display-name>DocFlow ZK</display-name>
  <welcome-file-list>
    <welcome-file>index.zul</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>JwtAuthFilter</filter-name>
    <filter-class>com.example.docflow.security.JwtAuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>JwtAuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- Download attachments -->
  <servlet>
    <servlet-name>fileDownload</servlet-name>
    <servlet-class>com.example.docflow.web.FileDownloadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>fileDownload</servlet-name>
    <url-pattern>/files/*</url-pattern>
  </servlet-mapping>
  <context-param>
  <param-name>db.url</param-name>
  <param-value>jdbc:mysql://localhost:3306/docflow?useUnicode=true&amp;characterEncoding=utf8&amp;serverTimezone=Asia/Bangkok&amp;useSSL=false&amp;allowPublicKeyRetrieval=true</param-value>
</context-param>
<context-param>
  <param-name>db.user</param-name>
  <param-value>docflow</param-value>
</context-param>
<context-param>
  <param-name>db.pass</param-name>
  <param-value>docflow123</param-value>
</context-param>
</web-app>